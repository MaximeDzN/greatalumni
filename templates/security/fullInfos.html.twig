{% extends 'base.html.twig' %}

{% block content_title %}
	Complétez vos informations
{% endblock %}

{% block content_body %}
        <div class="__row">
        <h3>Veuillez entrer vos informations ci-dessous.</h3>
        {{form_start(signupForm)}}
        <div class="__col  __col--half">
                <div class="input__container">
                        {{form_label(signupForm.login,'Nom d\'utilisateur',{'label_attr': {'class': ''}})}}
                        {{form_widget(signupForm.login)}}
                        {{form_errors(signupForm.login)}}
                </div>
                
        
                
                <div class="__col  __col--half">
                        <div class="input__container">
                                {{form_label(signupForm.name,'Nom')}}
                                {{form_widget(signupForm.name)}}
                                {{form_errors(signupForm.name)}}
                        </div>
                </div>  


                <div class="__col  __col--half">
                        <div class="input__container">
                                {{form_label(signupForm.nickname,'Prénom')}}
                                {{form_widget(signupForm.nickname)}}
                                {{form_errors(signupForm.nickname)}}
                        </div>
                </div>

                <div class="__col  __col--half">
                        <div class="input__container">
                                {{form_label(signupForm.department,'Département')}}
                                {{form_widget(signupForm.department)}}
                                {{form_errors(signupForm.department)}}
                        </div>
                </div>

                <div class="__col  __col--half">
                        <div class="input__container">
                                {{form_label(signupForm.promo,'Promotion')}}
                                {{form_widget(signupForm.promo)}}
                                {{form_errors(signupForm.promo)}}
                        </div>
                </div>
                
                <div class="__col  __col--half">
                        <div class="input__container">
                                <h3>Passions</h3>
                                <body>
                                <div class="input_fields_wrap">
                                        <button class="add_field_button">Ajouter une passion</button>
                                        <div>
                                                <input type="text" name="hobbies[]" placeholder="Passion" >
                                        </div>
                                </div>
                                </body>

                        </div>
                </div>

                <div class="__col  __col--half">
                        <div class="input__container">
                        <h3>Ecole/formations</h3>
                        <body>
                        <div class="input_fields_wrap2">
                                <button class="add_field_button2">Ajouter une école ou une formation</button>
                                <div> 
                                        <input type="text" name="school_curriculum[]" placeholder="Ecole ou formation">
                                </div>
                        
                        </div>
                        </body>
                        </div>
                </div>


                <div class="__col  __col--half">
                        <div class="input__container">
                        <h3>Entreprises/Stages</h3>
                        <body>
                        <div class="input_fields_wrap1">
                                <button class="add_field_button1">Ajouter une Entreprises ou un Stage</button>
                                <div>
                                        <input type="text" name="career[]" placeholder="Entreprises ou un Stage">
                                </div>
                        </div>
                        </body>
                        </div>
                </div>
                
                <div class="__col  __col--half">
                        <div class="input__container">
                                {{form_label(signupForm.expression,'Expression')}}
                                {{form_widget(signupForm.expression)}}
                                {{form_errors(signupForm.expression)}}
                        </div>
                </div>




                <div class="__col  __col--half">
                        <div class="input__container">
                                {{form_label(signupForm.password.first,'Mot de passe')}}        
                                {{form_widget(signupForm.password.first)}}
                                {{form_errors(signupForm.password.first)}}
                        </div>
                </div>

                <div class="__col  __col--half">
                        <div class="input__container">
                                {{form_label(signupForm.password.second,'Répêtez le mot de passe')}}
                                {{form_widget(signupForm.password.second)}}
                                {{form_errors(signupForm.password.second)}}
                        </div>
                </div>

                <div class="__col  __col--half">
                        <div class="input__container">
                                {{form_label(signupForm.gender,'Genre')}}
                                {{form_widget(signupForm.gender)}}
                                {{form_errors(signupForm.gender)}}
                        </div>
                </div>

                <div class="__col  ">
                        <div class="input__container input__containerButton">
                                {{form_widget(signupForm.Valider)}}
                        </div>
                </div>

        {{form_end(signupForm)}}
        </div>
        {% block javascript %}
                <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
                <script src="{{asset('js/inscription.js')}}"></script>
        {% endblock %}
{% endblock %}
