{% extends "base.html.twig" %}
{% block content_title %}
	{{user.name}}
	{{user.nickname}}
{% endblock %}
{% block content_body %}
	<div class="__row">
		<div class="__col ">
			<div
				class="input__containerButton">
				{# Formulaire Modification profil (photo et informations) #}
				<div class="container__img">

					<img class="profil__photo" src="/images/avatar/{{ user.photo }}"/>


				</div>
			</div>
		</div>
	</div>
	<a href="{{path('writeMessage',{user : user, id : user.id })}}">
		<button class="" type="submit">
			Rediger un message 
		</button>
	</a>
	 {% if app.user %}
			{% if is_granted('ROLE_ADMIN') %}

	<a href="{{path('update_role',{user : user, id : user.id })}}">
		<button class="" type="submit">
			Modifier le r√¥le	
		</button>
	</a>
			{% endif %}
	{% endif %}


	<div class="__row">
		<div class="__col  __col--half">
			<div class="show__directory profile__name">
				<h2>
					{{user.name}}
				</h2>
			</div>
		</div>


		<div class="__col  __col--half">
			<div class="show__directory profile__name">
				<h2>
					{{user.nickname}}
				</h2>
			</div>
		</div>

		<div class="__col  __col--half">
			<div class="show__directory ">
				<h2>
					{{user.login}}
				</h2>
			</div>
		</div>
		<div class="__col  __col--half">
			<div class="show__directory ">
				<h2>
					{{user.email}}</h2>
			</div>
		</div>

		<div class="__col  __col--half">
			<div class="show__directory ">
				<h2>
					{{user.department}}
				</h2>
			</div>
		</div>

		<div class="__col  __col--half">
			<div class="show__directory">
				<h2>
					{{user.promo}}
				</h2>
			</div>
		</div>
		
		<div class="__col  __col--half ">
			<div class="show__directory">
				{% if user.gender == 1  %}
					<h2>
						Homme
					</h2>
				{% else %}
					<h2>
						Femme
					</h2>
				{% endif %}

			</div>
		</div>
		
		<div class="__col  __col--half">
			<div class="show__directory">
				<h2>
					{{user.expression}}
				</h2>
			</div>
		</div>
		{# Pour l'affichage Le cursus scolaire #}
			<div class="__col  __col--half ">
			<div class="show__directory">
			<h5>Le cursus scolaire</h5>
				<table>

				{% for item in user.schoolCurriculum %}
					
						 <tr>
						 <td>{{ item }}</td>	
						 </tr><br>		
						 			
				{% endfor %}
				
			</table>
			</div>
		</div>
		{# Pour l'affichage Le parcours professionnel #}
			<div class="__col  __col--half ">
			<div class="show__directory">
			<h5>Le parcours professionnel</h5>
			<table>

				{% for item in user.career %}
					
						 	 <tr>
						 <td>{{ item }}</td>
						 </tr><br>
					
				{% endfor %}
			</table>
			</div>
		</div>
	{# Pour l'affichage hobbies #}
		<div class="__col  __col--half ">
			<div class="show__directory">
			<h5>hobbies</h5>
			<table>

				{% for item in user.hobbie %}
					
						 <tr>
						 <td>{{ item }}</td>
						 </tr><br>
					
				{% endfor %}
			</table>	
			</div>
		</div>
		 <div class="__col  __col--half ">
				<div class="show__directory">
					
						{% if user.roles[0] == "ROLE_ADMIN"  %}
					<h2>
						Administrateur
					</h2>
				
				{% endif %}
					
				</div>
			</div>
	</div>

</div>{% endblock %}
